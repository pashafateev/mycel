{
  "name": "temporal-openclaw-bridge",
  "version": "0.1.0",
  "description": "Phase 1 tracer bridge between OpenClaw TypeScript side and Temporal harness",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "dev:bridge": "tsx src/index.ts",
    "dev:worker": "tsx src/worker.ts",
    "test:integration": "node --test --import tsx test/integration.test.ts",
    "start": "node dist/index.js",
    "start:bridge": "node dist/index.js",
    "start:worker": "node dist/worker.js"
  },
  "keywords": [
    "temporal",
    "openclaw",
    "bridge"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@temporalio/activity": "^1.15.0",
    "@temporalio/client": "^1.12.3",
    "@temporalio/worker": "^1.12.3",
    "@temporalio/workflow": "^1.12.3",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@temporalio/testing": "^1.15.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.13.8",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
